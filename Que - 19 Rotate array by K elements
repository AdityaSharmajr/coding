Problem Statement: Given an array of integers, rotating array of elements by k elements either left or right.
Example 1:
Input: N = 7, array[] = {1,2,3,4,5,6,7} , k=2 , right
Output: 6 7 1 2 3 4 5
Explanation: array is rotated to right by 2 position .
Example 2:
Input: N = 6, array[] = {3,7,8,9,10,11} , k=3 , left 
Output: 9 10 11 3 7 8
Explanation: Array is rotated to right by 3 position.
#include<iostream>
#include<algorithm>
using namespace std;

void rotateRight(int arr[], int n, int k) {
    k = k % n; 
    reverse(arr, arr + n); // Reverse the whole array
    reverse(arr, arr + k); // Reverse the first k elements
    reverse(arr + k, arr + n); // Reverse the remaining n-k elements
}
void rotateLeft(int arr[], int n, int k) {
    k = k % n; 
    reverse(arr, arr + n); 
    reverse(arr, arr + n - k); // Reverse the last n-k elements
    reverse(arr + n - k, arr + n); // Reverse the first k elements
}

int main() {
    int n;
    cout << "Enter the number Array: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        int size;
        cout << "Enter size of array: ";
        cin >> size;

        int k;
        cout << "Enter value of k: ";
        cin >> k;

        char direction;
        cout << "Enter direction (L for left, R for right): ";
        cin >> direction;

        int* arr = new int[size];
        cout << "Enter " << size << " elements for the array:\n";
        for (int j = 0; j < size; ++j) {
            cout << "Element " << j + 1 << ": ";
            cin >> arr[j];
        }

        cout << "Original array: ";
        for (int j = 0; j < size; ++j) {
            cout << arr[j] << " ";
        }
        cout << endl;

        if (direction == 'R' || direction == 'r') {
            rotateRight(arr, size, k);
            cout << "Array after rotating right by " << k << " elements: ";
        } else if (direction == 'L' || direction == 'l') {
            rotateLeft(arr, size, k);
            cout << "Array after rotating left by " << k << " elements: ";
        } else {
            cout << "Invalid direction. Please enter 'L' for left or 'R' for right.";
        }
        for (int j = 0; j < size; ++j) {
            cout << arr[j] << " ";
        }
        cout << endl;

        delete[] arr;
    }
    return 0;
}
